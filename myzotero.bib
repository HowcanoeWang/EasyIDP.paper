}

@article{cabrerabosquet_high-throughput_2012,
	title = {High-throughput {Phenotyping} and {Genomic} {Selection}: {The} {Frontiers} of {Crop} {Breeding} {ConvergeF}},
	volume = {54},
	copyright = {© 2012 Institute of Botany, Chinese Academy of Sciences},
	issn = {1744-7909},
