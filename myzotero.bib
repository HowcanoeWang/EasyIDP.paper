@article{liang_forest_2015,
	title = {Forest {Data} {Collection} {Using} {Terrestrial} {Image}-{Based} {Point} {Clouds} {From} a {Handheld} {Camera} {Compared} to {Terrestrial} and {Personal} {Laser} {Scanning}},
