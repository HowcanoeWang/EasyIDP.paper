	author = {Zhang, Yongguang and Zhang, Qian and Liu, Liangyun and Shao-qiang, Wang and Ju, Weimin and Tang, Jianwu and Huang, Ying and Zhu, Xudong and Wang, Feng and Zhang, Jinsong and al, et},
