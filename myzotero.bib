	journal = {Functional Plant Biology},
	author = {Heijden, Gerie van der and Song, Yu and Horgan, Graham and Polder, Gerrit and Dieleman, Anja and Bink, Marco and Palloix, Alain and Eeuwijk, Fred van and Glasbey, Chris},
	month = nov,
	year = {2012},
	pages = {870--877}
}
@article{moeckel_estimation_2018,
