@article{sanz-cortiella_innovative_2011,
	title = {Innovative {LIDAR} {3D} {Dynamic} {Measurement} {System} to {Estimate} {Fruit}-{Tree} {Leaf} {Area}},
	volume = {11},
	copyright = {http://creativecommons.org/licenses/by/3.0/},
